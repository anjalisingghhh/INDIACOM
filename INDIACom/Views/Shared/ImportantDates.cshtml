
@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Responsive Images with srcset</title>
    <link href="~/Content/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/css/slick.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <table id="important-dates-table">
        <thead id="table-header">
            <tr class="header-row">
                <th colspan="4" class="header-title">Important Dates</th>
            </tr>
        </thead>
        <tbody id="table-body">
            <tr class="date-row">
                <td class="date-description"><b>Submission of Full-Length Paper</b></td>
                <td class="date-value date-blue"><b>30<sup>th</sup> December, 2024</b></td>
                <td class="date-description"><b>Paper Acceptance Notification</b></td>
                <td class="date-value date-blue"><b>10<sup>th</sup> February, 2025</b></td>
            </tr>
            <tr class="date-row">
                <td class="date-description"><b>Submission of Final Version of the Paper</b></td>
                <td class="date-value date-red"><b>24<sup>th</sup> February, 2025</b></td>
                <td class="date-description"><b>Registration Deadline</b> <br> (Early Bird)</td>
                <td class="date-value date-red"><b>24<sup>th</sup> February, 2025</b></td>
            </tr>
        </tbody>
    </table>

    <style>
        #important-dates-table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ccc;
        }

            #important-dates-table thead {
                background-color: #6ea8dc; /* Blue header */
                color: white;
                font-weight: bold;
            }

            #important-dates-table th,
            #important-dates-table td {
                padding: 12px;
                text-align: left;
                border: 1px solid #ccc;
            }

            #important-dates-table tbody tr:nth-child(odd) {
                background-color: #f9f9f9; /* Light gray for alternate rows */
            }

            #important-dates-table tbody tr:nth-child(even) {
                background-color: #ffffff; /* White background */
            }

        /* Style for radio-like icons */
        .news-title::before {
            content: "â—‹"; /* Unicode for empty circle */
            margin-right: 10px;
            font-size: 16px;
            color: black;
        }

    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
